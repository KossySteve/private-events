<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% current_events = @user.created_events %>
<h2>List of created events</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>List of events to be attended</h2>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Event Date</th>
      <th>Event location</th>
      <th>Event description</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  
  <tbody>
  <% @upcoming.each do | event | %>
    <tr>
      <td><%= event[0] %></td>
      <td><%= event[1] %></td>
      <td><%= event[2] %></td>
      <td><%= event[3] %></td>
     </tr>
  <% end %>
</tbody>
</table>

<h2>List of events you attended in the past</h2>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Event Date</th>
      <th>Event location</th>
      <th>Event description</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  

  <tbody>
  <% @past.each do | event | %>
    <tr>
      <td><%= event[0] %></td>
      <td><%= event[1] %></td>
      <td><%= event[2] %></td>
      <td><%= event[3] %></td>
     </tr>
  <% end %>
</tbody>
</table>
